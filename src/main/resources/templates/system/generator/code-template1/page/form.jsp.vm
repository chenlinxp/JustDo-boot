<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<%@ page language="java" contentType="text/html; charset=utf-8" pageEncoding="utf-8"%>
<%request.setCharacterEncoding("utf-8");%>

<%@ taglib uri="/WEB-INF/tld/sihe.tld" prefix="sihe"%>
<%@ taglib uri="/WEB-INF/tld/c.tld" prefix="c"%>
<%@ taglib uri="/WEB-INF/tld/spring.tld" prefix="html"%>
<html>
#literal()
<c:set var="request" scope="page" value="${pageContext.request}" />
<c:set var="base" scope="page" value="${request.scheme}://${request.serverName}:${request.serverPort}" />
<c:set var="contextPath" scope="page" value="${request.contextPath}" />
<c:set var="basePath" scope="page" value="${base}${contextPath}/" />
#end
<head>
	<sihe:headerResource title="${comments}" validateNew="true" dwr="true" />
	<script>
	/*保存*/
	function save() {
		$.check() && (function(){
			XqTipOpen("正在保存数据,请稍后");
			document.${classname}Form.submit();
		})();
	}
</script>
</head>
<body >
	<html:form action="${classname}SaveAction.do?action=${param.action}"  commandName="${classname}Form" name="${classname}Form">
		<input type="hidden" name="isSaveAndAdd" id="isSaveAndAdd" value="${ isSaveAndAdd }" />
		<html:hidden path="${pk.attrname}"/>
		<sihe:tableNormal formMode="true">
		#foreach ($column in $columns)
	       <tr>
				<td>
					$column.comments：
				</td>
				<td>					
				    <html:input path="${column.attrname}" size="32"/>
				    <sihe:validElement title="${column.comments}" must="true"/>
				</td>
			</tr>
		#end
		</sihe:tableNormal>
	</html:form>
</body>
</html>
